{
    "compilerOptions": {
      "types": ["node", "express"],
      
      "target": "ES2016",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "build"
    },
    "include": ["backend/**/*.ts"],
    "exclude": ["node_modules"]
  }
  